  "license": "MIT",
  "devDependencies": {},
  "dependencies": {
    "compression": "^1.7.2",
    "concurrently": "^3.5.1",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "helmet": "^3.12.1",
    "mongoose": "^5.1.1",
    "morgan": "^1.9.0",
    "nodemon": "^1.14.7",
    "socket.io": "^2.1.1"
  }
}
